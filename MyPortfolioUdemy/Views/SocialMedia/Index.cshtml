@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Layout.cshtml";
}

@{
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            Sosyal Medya Hesapları Listesi
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya Hesapları ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İsim</th>
                                    <th scope="col">Bağlantı</th>
                                    <th scope="col">Ikon</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>
                                        <td>
                                            <a href="/SocialMedia/Delete/@item.SocialMediaId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/SocialMedia/Update/@item.SocialMediaId" class="btn btn-warning btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <div class="text-center">
                            <a href="/SocialMedia/Create/" class="btn btn-primary btn-sm">Yeni Hesap Ekle</a>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




