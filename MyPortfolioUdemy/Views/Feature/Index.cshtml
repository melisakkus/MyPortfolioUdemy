@model List<Feature>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan Bilgileri</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne çıkan alan ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col"> Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>                                       
                                        <td>
                                            <a href="/Feature/Delete/@item.FeatureId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Feature/Update/@item.FeatureId" class="btn btn-warning btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <div class="text-center">
                            <a href="/Feature/Create/" class="btn btn-primary btn-sm">Yeni Alan Ekle</a>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


