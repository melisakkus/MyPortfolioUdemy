@model ToDoList
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacak Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">

                            <label>İçerik</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Tarih</label>
                            <input type="text" asp-for="Date" class="form-control" />
                            <br />
                            <label>Resim</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <div class="text-center">
                                <button class="btn btn-primary btn-sm">Yapılacak Ekle</button>
                            </div>
                            <br />
                        </form>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



