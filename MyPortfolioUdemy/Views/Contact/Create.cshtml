@model Contact
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Alanı Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Başlık </label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Email</label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <br />
                            <label>Tel No</label>
                            <input type="text" asp-for="Phone" class="form-control" />
                            <br />
                            <label>Adres</label>
                            <input type="text" asp-for="Address" class="form-control" />
                            <br />
                            <div class="text-center">
                                <button class="btn btn-primary btn-sm">İletişim Bilgileri Ekle</button>
                            </div>
                            <br />
                        </form>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


