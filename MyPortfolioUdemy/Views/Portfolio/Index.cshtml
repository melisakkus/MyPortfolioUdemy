@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Layout.cshtml";
}
@{
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Portfolyo Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Portfolyo ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><img src="@item.ImageUrl" style="width:100px;height:100px"></img></td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>
                                            <a href="/Portfolio/Delete/@item.PortfolioId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Portfolio/Update/@item.PortfolioId" class="btn btn-warning btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <div class="text-center">
                            <a href="/Portfolio/Create/" class="btn btn-primary btn-sm">Yeni Proje Ekle</a>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


