@model Portfolio
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Portfolyo Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="PortfolioId" />                            
                            <label>Başlık </label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Alt Açıklama </label>
                            <input type="text" asp-for="SubTitle" class="form-control" />
                            <br />
                            <label>Detay</label>
                            <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Resim Link</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Proje Url</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <div class="text-center">
                                <button class="btn btn-primary btn-sm">Portfolyo Güncelle</button>
                            </div>
                            <br />
                        </form>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




