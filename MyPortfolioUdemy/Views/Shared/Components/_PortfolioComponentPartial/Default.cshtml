@using MyPortfolioUdemy.DAL.Entities
@*_PortfolioComponentPartial*@
@model List<Portfolio>

<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolio</h3>
            <h1>Projelerime Göz Atabilirsiniz</h1>

            <p class="lead">Farklı alanlarda edindiğim deneyimleri yazılımla birleştirerek ortaya koyduğum çalışmaları aşağıda inceleyebilirsiniz.</p>
        </div>
    </div>


    <div class="row masonry-wrap">
        <div class="masonry">

            @foreach (var item in Model)
            {
                <div class="masonry__brick">
                    <div class="item-folio">

                        <div class="item-folio__thumb">
                            <a href="@item.ImageUrl" class="thumb-link" title="The Beetle Car" data-size="1050x700">
                                <img src="@item.ImageUrl"
                                     srcset="@item.ImageUrl 1x, @item.ImageUrl 2x" alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @item.Title
                            </h3>
                            <p class="item-folio__cat">
                                @item.SubTitle
                            </p>
                        </div>

                        <a href="@item.Url" class="item-folio__project-link" title="Project link">
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@item.Description</p>
                        </div>

                    </div> <!-- end item-folio -->
                </div> <!-- end masonry__brick -->
            }

        </div>
    </div> <!-- end masonry -->

</section>
