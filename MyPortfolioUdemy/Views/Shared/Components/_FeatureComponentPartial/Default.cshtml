@using MyPortfolioUdemy.DAL.Entities
@*_FeatureComponentPartial*@
@model List<Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://cdn.pixabay.com/photo/2024/05/20/17/33/sky-8775846_960_720.png" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">
            <div class="row home-content__main">
                <h3>@item.Title</h3>
                <h1>
                    @item.Description
                </h1>
                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerİm
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>

        </div> <!-- end home-content -->
    }


    <ul class="home-social">
        @foreach (var item in ViewBag.socialMediaList){

            <li>
                <a href="@item.Url"><i class="@item.Icon" aria-hidden="true"></i><span>@item.Title</span></a>
            </li>
        }

    </ul>
    <!-- end home-social -->

</section>
