@model Skill
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Layout/Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Programlama Dili & Teknoloji Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="SkillId" />
                            <label>İsim </label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Değer </label>
                            <input type="number" asp-for="Value" class="form-control" />
                            <br />                          
                            <div class="text-center">
                                <button class="btn btn-primary btn-sm">Güncelle</button>
                            </div>
                            <br />
                        </form>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





